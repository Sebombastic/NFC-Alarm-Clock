<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<!-- Alarm screen -->
	<com.nfcalarmclock.settings.preference.NacPreferenceCategory
		android:title="@string/alarm_screen_category">

		<com.nfcalarmclock.settings.preference.NacCheckboxPreference
			android:title="@string/new_screen"
			android:key="@string/key_use_new_alarm_screen"
			android:summaryOn="@string/new_screen_true"
			android:summaryOff="@string/new_screen_false"
			android:defaultValue="@bool/default_use_new_alarm_screen"
			app:allowDividerAbove="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.settings.preference.NacCheckboxPreference
			android:title="@string/show_alarm_name"
			android:key="@string/key_show_alarm_name"
			android:summaryOn="@string/show_alarm_name_true"
			android:summaryOff="@string/show_alarm_name_false"
			android:defaultValue="@bool/default_show_alarm_name"
			/>

		<com.nfcalarmclock.settings.preference.NacCheckboxPreference
			android:title="@string/show_current_date_and_time"
			android:key="@string/key_show_current_date_and_time"
			android:summaryOn="@string/show_current_date_and_time_true"
			android:summaryOff="@string/show_current_date_and_time_false"
			android:defaultValue="@bool/default_show_current_date_and_time"
			app:allowDividerAbove="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.settings.preference.NacCheckboxPreference
			android:title="@string/show_music_info"
			android:key="@string/key_show_music_info"
			android:summaryOn="@string/show_music_info_true"
			android:summaryOff="@string/show_music_info_false"
			android:defaultValue="@bool/default_show_music_info"
			app:allowDividerAbove="false"
			app:allowDividerBelow="true"
			/>
	</com.nfcalarmclock.settings.preference.NacPreferenceCategory>

	<!-- Colors -->
	<com.nfcalarmclock.settings.preference.NacPreferenceCategory
		android:title="@string/color_category">

		<com.nfcalarmclock.view.colorpicker.NacColorPickerPreference
			android:title="@string/theme_color"
			android:key="@string/theme_color_key"
			android:summary="@string/theme_color_summary"
			android:defaultValue="@integer/default_theme_color"
			app:allowDividerAbove="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.view.colorpicker.NacColorPickerPreference
			android:title="@string/name_color"
			android:key="@string/name_color_key"
			android:summary="@string/name_color_summary"
			android:defaultValue="@integer/default_name_color"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.view.colorpicker.NacColorPickerPreference
			android:title="@string/days_color"
			android:key="@string/days_color_key"
			android:summary="@string/days_color_summary"
			android:defaultValue="@integer/default_days_color"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.view.colorpicker.NacColorPickerPreference
			android:title="@string/time_color"
			android:key="@string/time_color_key"
			android:summary="@string/time_color_summary"
			android:defaultValue="@integer/default_time_color"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.view.colorpicker.NacColorPickerPreference
			android:title="@string/am"
			android:key="@string/am_color_key"
			android:summary="@string/am_color_summary"
			android:defaultValue="@integer/default_am_color"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.view.colorpicker.NacColorPickerPreference
			android:title="@string/pm"
			android:key="@string/pm_color_key"
			android:summary="@string/pm_color_summary"
			android:defaultValue="@integer/default_pm_color"
			app:allowDividerAbove="false"
			app:allowDividerBelow="true"
			/>
	</com.nfcalarmclock.settings.preference.NacPreferenceCategory>

	<!-- Notifications -->
	<com.nfcalarmclock.settings.preference.NacPreferenceCategory
		android:title="@string/notification_category">

		<com.nfcalarmclock.settings.preference.NacCheckboxPreference
			android:title="@string/title_missed_alarms"
			android:key="@string/missed_alarm_key"
			android:summaryOn="@string/missed_alarm_true"
			android:summaryOff="@string/description_no_notification"
			android:defaultValue="@bool/default_missed_alarm"
			app:allowDividerAbove="false"
			app:allowDividerBelow="false"
			/>
	</com.nfcalarmclock.settings.preference.NacPreferenceCategory>

	<!-- Show/hide alarm options -->
	<com.nfcalarmclock.settings.preference.NacPreferenceCategory
		android:title="Show/hide alarm options">

		<com.nfcalarmclock.settings.preference.NacCheckboxPreference
			android:title="@string/alarm_vibrate"
			android:key="@string/show_hide_vibrate_button_key"
			android:summaryOn="@string/show_hide_vibrate_button_true"
			android:summaryOff="@string/show_hide_vibrate_button_false"
			android:defaultValue="@bool/default_show_hide_vibrate_button"
			app:allowDividerAbove="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.settings.preference.NacCheckboxPreference
			android:title="@string/alarm_nfc"
			android:key="@string/show_hide_nfc_button_key"
			android:summaryOn="@string/show_hide_nfc_button_true"
			android:summaryOff="@string/show_hide_nfc_button_false"
			android:defaultValue="@bool/default_show_hide_nfc_button"
			app:allowDividerAbove="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.settings.preference.NacCheckboxPreference
			android:title="@string/alarm_flashlight"
			android:key="@string/show_hide_flashlight_button_key"
			android:summaryOn="@string/show_hide_flashlight_button_true"
			android:summaryOff="@string/show_hide_flashlight_button_false"
			android:defaultValue="@bool/default_show_hide_flashlight_button"
			app:allowDividerAbove="false"
			app:allowDividerBelow="true"
			/>
	</com.nfcalarmclock.settings.preference.NacPreferenceCategory>

	<!-- Styling -->
	<com.nfcalarmclock.settings.preference.NacPreferenceCategory
		android:title="@string/style_category">

		<com.nfcalarmclock.view.dayofweek.NacDayButtonStylePreference
			android:title="@string/day_button_style"
			android:key="@string/day_button_style_key"
			android:summary="@string/description_day_button_style_filled"
			android:defaultValue="@integer/default_day_button_style"
			app:allowDividerAbove="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.alarm.options.startweekon.NacStartWeekOnPreference
			android:title="@string/start_week_on"
			android:key="@string/start_week_on_key"
			android:defaultValue="@integer/default_start_week_on_index"
			app:allowDividerBelow="true"
			/>
	</com.nfcalarmclock.settings.preference.NacPreferenceCategory>

	<!-- Tweaks -->
	<com.nfcalarmclock.settings.preference.NacPreferenceCategory
		android:title="@string/tweaks_category">

		<com.nfcalarmclock.settings.preference.NacCheckboxPreference
			android:title="@string/expand_new_alarm"
			android:key="@string/expand_new_alarm_key"
			android:summaryOn="@string/expand_new_alarm_true"
			android:summaryOff="@string/expand_new_alarm_false"
			android:defaultValue="@bool/default_expand_new_alarm"
			app:allowDividerAbove="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.alarm.options.nextalarmformat.NacNextAlarmFormatPreference
			android:title="@string/next_alarm_format"
			android:key="@string/next_alarm_format_key"
			android:defaultValue="@integer/default_next_alarm_format_index"
			app:allowDividerAbove="false"
			app:allowDividerBelow="false"
			/>
	</com.nfcalarmclock.settings.preference.NacPreferenceCategory>
</PreferenceScreen>
