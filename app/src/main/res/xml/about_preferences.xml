<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<!-- App -->
	<com.nfcalarmclock.settings.preference.NacPreferenceCategory
		android:title="@string/app_category">

		<Preference
			android:key="@string/key_settings_about_author"
			android:title="@string/author_title"
			android:summary="@string/author"
			app:iconSpaceReserved="false"
			app:allowDividerAbove="false"
			app:allowDividerBelow="false"
			/>

		<Preference
			android:key="@string/key_settings_about_version"
			android:title="@string/version_title"
			android:summary=""
			app:iconSpaceReserved="false"
			app:allowDividerAbove="true"
			/>

	</com.nfcalarmclock.settings.preference.NacPreferenceCategory>

	<!-- Permissions -->
	<com.nfcalarmclock.settings.preference.NacPreferenceCategory
		android:title="@string/permissions_category">

		<com.nfcalarmclock.system.permission.NacOptionalPermissionPreference
			android:key="@string/key_settings_about_ignore_battery_optimization"
			android:title="@string/about_ignore_battery_optimization"
			android:summary="@string/about_ignore_battery_optimization_summary"
			app:iconSpaceReserved="false"
			app:allowDividerAbove="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.system.permission.NacOptionalPermissionPreference
			android:key="@string/key_settings_about_nfc"
			android:title="@string/about_nfc"
			android:summary="@string/about_nfc_summary"
			app:iconSpaceReserved="false"
			app:allowDividerAbove="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.system.permission.NacOptionalPermissionPreference
			android:key="@string/key_settings_about_storage"
			android:title="@string/about_storage"
			android:summary="@string/about_storage_summary"
			app:iconSpaceReserved="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.system.permission.NacOptionalPermissionPreference
			android:key="@string/key_settings_about_vibrate"
			android:title="@string/about_vibrate"
			android:summary="@string/about_vibrate_summary"
			app:iconSpaceReserved="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.system.permission.NacRequiredPermissionPreference
			android:key="@string/key_settings_about_foreground_service"
			android:title="@string/about_foreground_service"
			android:summary="@string/about_foreground_service_summary"
			app:iconSpaceReserved="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.system.permission.NacRequiredPermissionPreference
			android:key="@string/key_settings_about_full_screen_intent"
			android:title="@string/about_full_screen_intent"
			android:summary="@string/about_full_screen_intent_summary"
			app:iconSpaceReserved="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.system.permission.NacRequiredPermissionPreference
			android:key="@string/key_settings_about_schedule_alarm"
			android:title="@string/about_schedule_alarm"
			android:summary="@string/about_schedule_alarm_summary"
			app:iconSpaceReserved="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.system.permission.NacRequiredPermissionPreference
			android:key="@string/key_settings_about_set_alarm"
			android:title="@string/about_set_alarm"
			android:summary="@string/about_set_alarm_summary"
			app:iconSpaceReserved="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.system.permission.NacRequiredPermissionPreference
			android:key="@string/key_settings_about_post_notifications"
			android:title="@string/about_post_notifications"
			android:summary="@string/about_post_notifications_summary"
			app:iconSpaceReserved="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.system.permission.NacRequiredPermissionPreference
			android:key="@string/key_settings_about_boot"
			android:title="@string/about_boot"
			android:summary="@string/about_boot_summary"
			app:iconSpaceReserved="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.system.permission.NacRequiredPermissionPreference
			android:key="@string/key_settings_about_wakelock"
			android:title="@string/about_wakelock"
			android:summary="@string/about_wakelock_summary"
			app:iconSpaceReserved="false"
			app:allowDividerBelow="true"
			/>

	</com.nfcalarmclock.settings.preference.NacPreferenceCategory>

</PreferenceScreen>
