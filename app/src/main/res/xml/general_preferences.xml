<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<!-- Default alarm -->
	<com.nfcalarmclock.settings.preference.NacPreferenceCategory
		android:title="@string/title_default_alarm">

		<com.nfcalarmclock.card.NacCardPreference
			android:key="@string/key_default_alarm_card"
			app:allowDividerAbove="false"
			app:allowDividerBelow="true"
			/>
	</com.nfcalarmclock.settings.preference.NacPreferenceCategory>

	<!-- Alarm screen -->
	<com.nfcalarmclock.settings.preference.NacPreferenceCategory
		android:title="@string/title_alarm_screen">

		<com.nfcalarmclock.settings.preference.NacCheckboxPreference
			android:title="@string/title_new_screen"
			android:key="@string/key_use_new_alarm_screen"
			android:summaryOn="@string/description_use_new_screen_true"
			android:summaryOff="@string/description_use_new_screen_false"
			android:defaultValue="@bool/default_use_new_alarm_screen"
			app:allowDividerAbove="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.settings.preference.NacCheckboxPreference
			android:title="@string/title_show_alarm_name"
			android:key="@string/key_alarm_screen_show_alarm_name"
			android:summaryOn="@string/description_alarm_screen_show_alarm_name_true"
			android:summaryOff="@string/description_alarm_screen_show_alarm_name_false"
			android:defaultValue="@bool/default_alarm_screen_show_alarm_name"
			/>

		<com.nfcalarmclock.settings.preference.NacCheckboxPreference
			android:title="@string/title_show_current_date_and_time"
			android:key="@string/key_alarm_screen_show_current_date_and_time"
			android:summaryOn="@string/description_alarm_screen_show_current_date_and_time_true"
			android:summaryOff="@string/description_alarm_screen_show_current_date_and_time_false"
			android:defaultValue="@bool/default_alarm_screen_show_current_date_and_time"
			app:allowDividerAbove="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.settings.preference.NacCheckboxPreference
			android:title="@string/title_show_music_info"
			android:key="@string/key_alarm_screen_show_music_info"
			android:summaryOn="@string/description_alarm_screen_show_music_info_true"
			android:summaryOff="@string/description_alarm_screen_show_music_info_false"
			android:defaultValue="@bool/default_alarm_screen_show_music_info"
			app:allowDividerAbove="false"
			app:allowDividerBelow="false"
			/>

		<com.nfcalarmclock.settings.preference.NacCheckboxPreference
			android:title="@string/title_battery_saver"
			android:key="@string/key_alarm_screen_battery_saver"
			android:summaryOn="@string/description_alarm_screen_battery_saver_true"
			android:summaryOff="@string/description_alarm_screen_battery_saver_false"
			android:defaultValue="@bool/default_alarm_screen_battery_saver"
			app:allowDividerAbove="false"
			app:allowDividerBelow="true"
			/>
	</com.nfcalarmclock.settings.preference.NacPreferenceCategory>

</PreferenceScreen>
