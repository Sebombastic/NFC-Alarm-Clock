<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<!-- Default alarm -->
	<com.nfcalarmclock.settings.preference.NacPreferenceCategory
		android:title="@string/title_default_alarm">

		<!-- Name -->
		<com.nfcalarmclock.alarm.options.name.NacNamePreference
			android:key="@string/alarm_name_key"
			android:title="@string/title_alarm_name"
			android:defaultValue=""
			app:allowDividerAbove="false"
			app:allowDividerBelow="false"
			/>

		<!-- Day of week -->
		<com.nfcalarmclock.view.dayofweek.NacDayOfWeekPreference
			android:key="@string/alarm_days_key"
			android:title="@string/title_alarm_days"
			android:defaultValue="@integer/default_days"
			app:allowDividerBelow="false"
			/>

		<!-- Repeat -->
		<com.nfcalarmclock.settings.preference.NacCheckboxPreference
			android:key="@string/alarm_repeat_key"
			android:title="@string/title_alarm_repeat"
			android:summaryOn="@string/description_alarm_repeat_true"
			android:summaryOff="@string/description_alarm_repeat_false"
			android:defaultValue="@bool/default_repeat"
			app:allowDividerBelow="false"
			/>

		<!-- Vibrate -->
		<com.nfcalarmclock.settings.preference.NacCheckboxPreference
			android:key="@string/alarm_vibrate_key"
			android:title="@string/title_alarm_vibrate"
			android:summaryOn="@string/description_alarm_vibrate_true"
			android:summaryOff="@string/description_alarm_vibrate_false"
			android:defaultValue="@bool/default_vibrate"
			app:allowDividerBelow="false"
			/>

		<!-- NFC -->
		<com.nfcalarmclock.settings.preference.NacCheckboxPreference
			android:key="@string/alarm_use_nfc_key"
			android:title="@string/title_alarm_nfc"
			android:summaryOn="@string/description_alarm_nfc_true"
			android:summaryOff="@string/description_alarm_nfc_false"
			android:defaultValue="@bool/default_use_nfc"
			app:allowDividerBelow="false"
			/>

		<!-- Flashlight -->
		<com.nfcalarmclock.settings.preference.NacCheckboxPreference
			android:key="@string/alarm_use_flashlight_key"
			android:title="@string/action_alarm_option_flashlight"
			android:summaryOn="@string/description_alarm_flashlight_true"
			android:summaryOff="@string/description_alarm_flashlight_false"
			android:defaultValue="@bool/default_use_flashlight"
			app:allowDividerBelow="false"
			/>

		<!-- Media -->
		<com.nfcalarmclock.alarm.options.mediapicker.NacMediaPickerPreference
			android:key="@string/key_general_default_alarm_media_path"
			android:title="@string/title_alarm_sound"
			android:summary="@string/description_alarm_sound"
			android:defaultValue=""
			app:allowDividerBelow="false"
			/>

		<!-- Volume -->
		<com.nfcalarmclock.alarm.options.volume.NacVolumePreference
			android:key="@string/alarm_volume_key"
			android:title="@string/title_alarm_volume"
			android:defaultValue="@integer/default_volume"
			app:allowDividerAbove="false"
			app:allowDividerBelow="false"
			/>

	</com.nfcalarmclock.settings.preference.NacPreferenceCategory>

</PreferenceScreen>
