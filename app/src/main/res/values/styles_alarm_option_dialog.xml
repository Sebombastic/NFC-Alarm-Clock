<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Section -->
	<style name="Widget.AlarmOptionDialog.Section" parent="">
		<item name="android:paddingTop">@dimen/tiny</item>
		<item name="android:paddingBottom">@dimen/normal</item>
		<!--
		<item name="android:paddingEnd">@dimen/nudge</item>
		<item name="android:textColor">@color/orange</item>
		<item name="android:textSize">@dimen/tsz_normal</item>
		<item name="android:textStyle">bold</item>
		-->
	</style>

	<!-- Title -->
	<style name="Widget.AlarmOptionDialog.Title" parent="">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/tsz_normal</item>
		<item name="android:textStyle">bold</item>
	</style>

	<!-- Description -->
	<style name="Widget.AlarmOptionDialog.Description" parent="Widget.TextView.Secondary">
		<item name="android:paddingBottom">@dimen/small</item>
	</style>

	<!-- Separator -->
	<style name="Widget.AlarmOptionDialog.Separator" parent="">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/tiny</item>
	</style>

	<!-- Dropdown -->
	<style name="Widget.AlarmOptionDialog.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
		<item name="boxCornerRadiusTopStart">6dp</item>
		<item name="boxCornerRadiusTopEnd">6dp</item>
		<item name="boxCornerRadiusBottomStart">6dp</item>
		<item name="boxCornerRadiusBottomEnd">6dp</item>
		<item name="boxStrokeWidth">2dp</item>
	</style>

	<!-- Dropdown row -->
	<style name="Widget.AlarmOptionDialog.DropdownRow" parent="Widget.AlarmOptionDialog.Dropdown">
		<item name="android:paddingBottom">@dimen/medium</item>
	</style>

	<!-- Regular row -->
	<style name="Widget.AlarmOptionDialog.Row" parent="">
		<item name="android:paddingBottom">@dimen/medium</item>
	</style>

</resources>