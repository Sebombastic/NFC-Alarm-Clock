<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/all_alarm_options"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="@dimen/large"
	android:orientation="vertical">

	<!-- Audio source -->
	<Button
		style="@style/Widget.AlarmOptionMain.Button"
		android:id="@+id/alarm_option_audio_source"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/action_alarm_option_audio_source"
		/>

	<!-- Flashlight -->
	<Button
		style="@style/Widget.AlarmOptionMain.Button"
		android:id="@+id/alarm_option_flashlight"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/alarm_flashlight"
		/>

	<!-- Text-to-speech -->
	<Button
		style="@style/Widget.AlarmOptionMain.Button"
		android:id="@+id/alarm_option_text_to_speech"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/action_alarm_option_text_to_speech"
		/>

	<!-- Volume -->
	<Button
		style="@style/Widget.AlarmOptionMain.Button"
		android:id="@+id/alarm_option_volume"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Volume"
		/>

	<!-- Separator -->
	<View style="@style/Widget.AlarmOptionMain.Separator" />

	<!-- Dismiss options -->
	<Button
		style="@style/Widget.AlarmOptionMain.Button"
		android:id="@+id/alarm_option_dismiss_options"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/dismiss_options_category"
		/>

	<!-- Snooze options -->
	<Button
		style="@style/Widget.AlarmOptionMain.Button"
		android:id="@+id/alarm_option_snooze_options"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/snooze_options_category"
		/>

	<!-- Separator -->
	<View style="@style/Widget.AlarmOptionMain.Separator" />

	<!-- Upcoming reminder -->
	<Button
		style="@style/Widget.AlarmOptionMain.Button"
		android:id="@+id/alarm_option_upcoming_reminder"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/action_alarm_option_upcoming_reminder"
		/>

</LinearLayout>