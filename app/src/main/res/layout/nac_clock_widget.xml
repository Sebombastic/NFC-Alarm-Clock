	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:orientation="horizontal">

		<TextClock
			android:id="@+id/date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:format24Hour="E MMM d"
			android:format12Hour="E MMM d"
			android:textSize="@dimen/tsz_small"
			android:textStyle="bold"
			android:textColor="@color/white"
			/>

		<TextClock
			android:id="@+id/date_bold"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:format24Hour="E MMM d"
			android:format12Hour="E MMM d"
			android:textSize="@dimen/tsz_small"
			android:textColor="@color/white"
			android:textStyle="bold"
			android:visibility="gone"
			/>

		<ImageView
			android:id="@+id/alarm_icon"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginHorizontal="@dimen/twoline"
			android:layout_marginVertical="@dimen/twoline"
			android:src="@drawable/alarm"
			app:tint="@color/white"
			/>

		<TextView
			android:id="@+id/alarm_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/orange"
			android:textSize="@dimen/tsz_small"
			android:textStyle="bold"
			android:text="Sun 7:45 AM"
			/>
	</LinearLayout>

</LinearLayout>