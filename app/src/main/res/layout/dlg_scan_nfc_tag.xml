<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/alarm_option_container"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="@dimen/large"
	android:paddingBottom="@dimen/large"
	android:orientation="vertical"
	app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

	<!-- Scroll view in case there are a lot of views -->
	<androidx.core.widget.NestedScrollView
		android:id="@+id/options_scroll_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/medium"
		android:scrollbarFadeDuration="10000"
		android:scrollbars="vertical">

		<!-- Inner layout -->
		<LinearLayout
			android:id="@+id/container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/large"
			android:layout_marginEnd="@dimen/large"
			android:orientation="vertical">

			<!-- Title -->
			<TextView
				style="@style/Widget.AlarmOptionDialog.Title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/title_scan_nfc_tag"
				/>

			<!-- Description -->
			<TextView
				style="@style/Widget.AlarmOptionDialog.Description"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/message_scan_nfc_tag"
				/>

			<!-- Image to indicate that the user should scan an NFC tag -->
			<ImageView
				android:contentDescription="@string/title_scan_nfc_tag"
				android:layout_width="@dimen/isz_focus"
				android:layout_height="@dimen/isz_focus"
				android:layout_marginTop="@dimen/large"
				android:layout_marginBottom="@dimen/large"
				android:layout_gravity="center"
				android:src="@drawable/tap_and_play"
				/>

			<!-- Title -->
			<TextView
				style="@style/Widget.AlarmOptionDialog.Title"
				android:id="@+id/title_currently_selected"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/tiny"
				android:textAlignment="textEnd"
				android:textSize="@dimen/tsz_small"
				android:text="@string/title_current_selected"
				android:visibility="gone"
				/>

			<!-- Description -->
			<TextView
				style="@style/Widget.AlarmOptionDialog.Description"
				android:id="@+id/description_nfc_tag_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textAlignment="textEnd"
				android:ellipsize="end"
				android:maxLines="1"
				android:text=""
				android:visibility="gone"
				/>

		</LinearLayout>
	</androidx.core.widget.NestedScrollView>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/large"
		android:layout_marginEnd="@dimen/large"
		android:orientation="horizontal">

		<!-- Ok button -->
		<com.google.android.material.button.MaterialButton
			style="@style/Widget.AlarmOptionDialog.Button"
			android:id="@+id/ok_button"
			android:layout_width="0dp"
			android:layout_weight="5"
			android:layout_marginStart="0dp"
			android:layout_marginEnd="0dp"
			android:text="@string/action_select_nfc_tag"
			app:backgroundTint="@color/orange"
			/>

		<Space
			android:layout_width="@dimen/normal"
			android:layout_height="match_parent"
			/>

		<!-- Add an additional tag button -->
		<com.google.android.material.button.MaterialButton
			style="@style/Widget.AlarmOptionDialog.Button"
			android:id="@+id/add_nfc_tag_button"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_marginStart="0dp"
			android:layout_marginEnd="0dp"
			app:backgroundTint="@color/orange"
			app:iconGravity="textStart"
			app:iconPadding="0dp"
			app:iconTint="@color/black"
			app:icon="@drawable/plus"
			/>
	</LinearLayout>

	<!-- Use any NFC tag button -->
	<com.google.android.material.button.MaterialButton
		style="@style/Widget.AlarmOptionDialog.Button"
		android:id="@+id/use_any_nfc_tag_button"
		android:layout_width="match_parent"
		android:text="@string/action_use_any"
		/>

	<!-- Cancel button -->
	<com.google.android.material.button.MaterialButton
		style="@style/Widget.AlarmOptionDialog.Button"
		android:id="@+id/cancel_button"
		android:layout_width="match_parent"
		android:text="@string/action_cancel"
		/>

</LinearLayout>
